                <div class="sidebar-header">
                    <div class="sidebar-brand">
                        <a href="" class="bg-white p-2">
                            <img  src="~/images/logo (1).png" /> 
                        </a>
                    </div>
                </div>
                <li><a href="@Url.Action("Index","Admin")">Home</a></li>
                <li><a href="@Url.Action("departIndexpage","Admin")"> Departments</a></li>
                <li><a href="@Url.Action("roleIndexpage","Admin")">Roles</a></li>
                <li><a href="@Url.Action("PassedOutIndexpage","Admin")">Year of passedout</a></li>
                <li><a href="@Url.Action("Index","Home")">Candidate Records</a></li>
                <li><a href="@Url.Action("Logoff","Admin")">Log Out</a></li>
