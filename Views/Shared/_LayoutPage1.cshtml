                            <li><a href="@Url.Action("createOrEditpassedoutyear","Admin")">Add Year Of PassedOut</a></li>
                            <li><a href="@Url.Action("CreateorEditRole","Admin")">Add Roles</a></li>
                            <li><a href="@Url.Action("createEmployeorEdit","Admin")">Add Employee</a></li>


                        </ul>
                    </li>
                }


            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger animated fadeInLeft is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-lg-offset-2">
                        @RenderBody()
                    </div>
                    <footer style="background-color: #002d79; color: #ffffff;text-align:center;width:100%">

